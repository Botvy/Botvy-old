{
    "name": "root",
    "version": "0.0.0",
    "license": "MIT",
    "private": true,
    "scripts": {
        "commit": "git-cz",
        "test": "lerna run test",
        "publish": "lerna publish --conventional-commits"
    },
    "workspaces": [
        "packages/"
    ],
    "devDependencies": {
        "commitizen": "^4.0.5",
        "cz-conventional-changelog": "^3.1.0",
        "husky": "^4.2.5",
        "lerna": "^3.20.2",
        "lint-staged": "^10.2.2",
        "prettier": "^2.0.5"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,tsx,json,md}": "prettier --write"
    }
}
